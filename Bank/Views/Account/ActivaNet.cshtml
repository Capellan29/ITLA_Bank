@model Bank.Models.RegisterViewModel


<h3 class="text-danger">@ViewBag.Error</h3>


@using (Html.BeginForm("ActivaNet", "Account"))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>RegisterViewModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                <h4>Cliente</h4>
                @Html.DropDownList("ClienteID", null, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group label-floating">
            <div class="input-group col-sm-10">
                @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group label-floating">
            <div class="input-group col-md-10">
                @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control password" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group label-floating">
            <div class="input-group col-md-10">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control password" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-raised btn-info"})
                <input type="submit" value="Activar" class="btn btn-raised btn-primary" />
            </div>
        </div>
    </div>
}


