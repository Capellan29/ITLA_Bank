@model Bank.Models.Cuenta

@{
    ViewBag.Title = "Delete";
}

<h2>Eliminar cuenta</h2>

<div>
    <div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title text-warning">Seguro que desea eliminar esta Cuenta?</h4>
        </div>
        <div class="modal-body">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Titular.Nombre)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Titular.FullName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Numero)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Numero)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Saldo)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Saldo)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Estado)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Estado)
                </dd>

            </dl>
        </div>
        <div class="modal-footer">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions">
                    @Html.ActionLink("Cancelar", "Index", null , new { @class = "btn btn-info btn-raised" })
                    <input type="submit" value="Eliminar" class="btn btn-raised btn-danger" />
                </div>
            }
        </div>
    </div>
</div> 
</div>
