@model Bank.Models.Transaccion

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Retiro</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group label-static">
            <div class="input-group col-sm-10">
                <label class="control-label" for="Numero">Numero de cuenta</label>
                @Html.DropDownList("CuentaIDFrom", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CuentaID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group label-static">
            <div class="input-group col-sm-10">
                <label class="control-label" for="Numero">Numero de cuenta</label>
                @Html.DropDownList("CuentaID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CuentaID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group label-floating">
            <div class="input-group col-sm-10">
                @Html.LabelFor(m => m.Monto, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Monto, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Monto, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group label-floating">
            <div class="input-group col-sm-10">
                @Html.LabelFor(m => m.Fecha, new { @class = "control-label" })
                @Html.EditorFor(m => m.Fecha, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Fecha, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group label-floating">
            <div class="input-group col-sm-10">
                @Html.LabelFor(m => m.Comentario, new { @class = "control-label" })
                @Html.TextAreaFor(m => m.Comentario, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Comentario, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="    col-md-10">
                @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-raised btn-info" })
                <input type="submit" value="Transferir" class="btn btn-raised btn-primary" />
            </div>
        </div>
    </div>
}


