@model Bank.Models.Prestamo

@{
    ViewBag.Title = "Solicitud";
}

<h2>Solicitud de prestamo</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row-content">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        <div class="col-md-6">
            <fieldset>
                <legend>Datos Financieros</legend>
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Plazo, new { htmlAttributes = new { @class = "form-control", @placeholder = "Plazo" } })
                        @Html.ValidationMessageFor(model => model.Plazo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Monto, new { htmlAttributes = new { @class = "form-control", @placeholder = "Monto" } })
                        @Html.ValidationMessageFor(model => model.Monto, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TasaInteres, new { htmlAttributes = new { @class = "form-control", @placeholder = Html.DisplayNameFor(model => model.TasaInteres) } })
                        @Html.ValidationMessageFor(model => model.TasaInteres, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TasaMora, new { htmlAttributes = new { @class = "form-control", @placeholder = Html.DisplayNameFor(model => model.TasaMora) } })
                        @Html.ValidationMessageFor(model => model.TasaMora, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <h4>Cliente</h4>
                        @Html.DropDownList("ClienteID", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ClienteID, "", new { @class = "text-danger" })
                    </div>
                </div>
            </fieldset>
        </div>
        <div class="col-md-6">
            <fieldset>
                <legend>Datos del Garante</legend>
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Garante.Nombre, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nombre" } })
                        @Html.ValidationMessageFor(model => model.Garante.Nombre, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Garante.Apellido, new { htmlAttributes = new { @class = "form-control", @placeholder = "Apellido" } })
                        @Html.ValidationMessageFor(model => model.Garante.Apellido, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Garante.Telefono, new { htmlAttributes = new { @class = "form-control", @placeholder = "Telefono" } })
                        @Html.ValidationMessageFor(model => model.Garante.Telefono, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Garante.Cedula, new { htmlAttributes = new { @class = "form-control", @placeholder = "Cedula" } })
                        @Html.ValidationMessageFor(model => model.Garante.Cedula, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Garante.Direccion, new { htmlAttributes = new { @class = "form-control", @placeholder = "Direccion" } })
                        @Html.ValidationMessageFor(model => model.Garante.Direccion, "", new { @class = "text-danger" })
                    </div>
                </div>
            </fieldset>
        </div>
      
        <div class="form-group">
            <div class="col-md-10">
                @Html.ActionLink("Volver", "Index", "Cliente", null, new { @class = "btn btn-raised btn-info" })
                <input type="submit" value="Solicitar" class="btn btn-raised btn-primary" />
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
