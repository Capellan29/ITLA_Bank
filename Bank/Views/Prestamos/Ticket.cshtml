
@{
    ViewBag.Title = "Ticket";
}

<script type="text/javascript">
    function imprSelec(Ticket)
    {
        var ficha = document.getElementById(Ticket);
        var ventimp = window.open(' ', 'popimpr');
        ventimp.document.write(ficha.innerHTML);
        ventimp.document.close();
        ventimp.print();
        ventimp.close();
    }
</script>

<h2>Ticket</h2>
<div class="col-sm-4">
    <div class="panel panel-primary" id="Ticket">
        <div class="panel-heading">
            <h3>@ViewBag.Valores[0]</h3>
        </div>
        <div class="panel-body">
            <dl class="dl-horizontal">
                <dt>
                    Monto:
                </dt>
                <dd>
                    @ViewBag.Valores[1]
                </dd>
                <dt>
                    Tasa Interes:
                </dt>
                <dd>
                    @ViewBag.Valores[2]
                </dd>

                <dt>
                    Plazo:
                </dt>
                <dd>
                    @ViewBag.Valores[3]
                </dd>

                <dt>
                    Tasa moratoria:
                </dt>
                <dd>
                    @ViewBag.Valores[4]
                </dd>

                <dt>
                    Fecha:
                </dt>
                <dd>
                    @ViewBag.Valores[6]
                </dd>

                <dt>
                    Cuota:
                </dt>
                <dd>
                    @ViewBag.Valores[7]
                </dd>

                <dt>
                    Mora aplicada:
                </dt>
                <dd>
                    @ViewBag.Valores[8]
                </dd>

                <dt>
                    Pago total:
                </dt>
                <dd>
                    @ViewBag.Valores[9]
                </dd>

                <dt>
                    Proximo pago:
                </dt>
                <dd>
                    @ViewBag.Valores[10]
                </dd>

            </dl>
        </div>
    </div>
    <div class="panel-footer">
        <a href="javascript:imprSelec('Ticket')" class="btn btn-primary">Imprimir</a>
        @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-warning" })
    </div>
</div>

