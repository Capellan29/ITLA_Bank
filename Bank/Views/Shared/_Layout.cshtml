<!DOCTYPE html>
<html>
    <head>
        <style>
            footer {
                width: 100%;
                bottom: 0;
                position: fixed;
                height: 120px;
            }

            body {
                padding-bottom: 125px;
            }

            #LanguageSelector {
                width: 20%;
            }
        </style>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title - ITLA Bank</title>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")

    </head>
    <body>
        <div class="navbar navbar-info navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("ITLA Bank", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Clientes", "Index", "Cliente")</li>
                        <li class="dropdown">
                            <a class="dropdown-toggle" href="bootstrap-elements.html" data-toggle="dropdown" data-target="#">
                                Prestamos
                                <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Prestamos", "Index", "Prestamos")</li>
                                <li>@Html.ActionLink("Amortizacion", "Amortizacion", "Prestamos")</li>
                            </ul>
                        </li>
                        <li>@Html.ActionLink("Cuentas", "Index", "Cuentas")</li>

                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
        <div class="container body-content">
            <br />
            <br />
            @RenderBody()

            @*<footer>
                <p>&copy; @DateTime.Now.Year - ITLA Bank</p>
            </footer>*@
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
        <script>
            $.material.init();
        </script>
    </body>
</html>
